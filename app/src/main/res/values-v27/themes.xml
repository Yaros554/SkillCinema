<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SkillCinema" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/skill_purple</item>
        <item name="colorPrimaryVariant">@color/skill_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/skill_purple</item>
        <item name="colorSecondaryVariant">@color/skill_purple</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Прочие цвета -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/skill_black</item>
        <item name="colorOnSurface">@color/skill_black</item>
        <item name="colorBackgroundVariant">@color/white_variant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="tabStyle">@style/Widget.App.TabLayout</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="CustomTextView" parent="Widget.AppCompat.TextView" >
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.App.Button</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicator">@drawable/tab_selected</item>
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabTextColor">@color/tab_text_color</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>