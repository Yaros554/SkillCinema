<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkillCinema" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/skill_purple</item>
        <item name="colorPrimaryVariant">@color/skill_purple</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/skill_purple</item>
        <item name="colorSecondaryVariant">@color/skill_purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Прочие цвета -->
        <item name="android:colorBackground">@color/skill_black</item>
        <item name="colorSurface">@color/skill_black</item>
        <item name="colorBackgroundVariant">@color/skill_black_variant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <!-- Customize your theme here. -->
        <item name="tabStyle">@style/Widget.App.TabLayout</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
    </style>
</resources>